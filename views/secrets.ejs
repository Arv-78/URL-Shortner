<%- include('partials/header') %>
<div class="container">
  <h1>URL Shrinker</h1>
  <form action="/shortUrls" method="POST" class="my-4 form-inline">
    <label for="fullUrl" class="sr-only">Url</label>
    <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
    <button class="btn btn-success" type="submit">Shrink</button>
  </form>
  
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
        <th>Time remaining in hrs</th>
      </tr>
    </thead>
    <tbody>
      <% shortUrls.forEach(shortUrl => { %>
        <tr>
          <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
          <td><a href="<%= shortUrl.short %>" onclick="window.location.reload(true)"><%= shortUrl.short %></a></td>
          <td><%= shortUrl.clicks %></td>
          <td><%= 48 - Math.floor(Math.abs(shortUrl.time - new Date()) / 3600000)   %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
</div>

<%- include('partials/footer') %>
